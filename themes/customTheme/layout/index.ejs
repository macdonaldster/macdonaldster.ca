<div class='row text-center'>
 <h1><%= config.title %></h1>
    <p><%= config.subtitle %></p>

</div>
<div class='row'>
<div class='col-md-8'>
 <ul>
 <% page.posts.each(function(post) { %>
     <li>
      <h3>
                <a href="<%- url_for(post.path) %>">
           <%= post.title %>
          </a>
            </h3>
            <div class='text-muted'>
                <%= date(post.date, config.date_format) %> 
            </div>
            
            <% if(post.excerpt) { %>
                <p>
                    <%- post.excerpt %>
                </p>
		<p><b>&gt;</b> <a href="<%- url_for(post.path) %>">view more...</a></p>	
            <% } %>


     </li>
   <% }) %>
 </ul>

<%- paginator({
  prev_text: '<',
  next_text: '>'
}) %>

</div>
<%- partial('partial/_sidebar_about') %>
</div>